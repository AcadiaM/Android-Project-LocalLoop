<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Local_Loop">
        <activity
            android:name=".Activity.Details.CategoryDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Details.EventDetailsActivity"
            android:exported="false" />

        <activity
            android:name=".Activity.Listings.DisplayItemActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Listings.UserDisplayActivity"
            android:exported="false" />
        <activity android:name=".Activity.Listings.UserEventActivity"
            android:exported="false" />

        <activity
            android:name=".Activity.Main.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".Activity.Main.SignUp"
            android:exported="false" />
        <activity
            android:name=".Activity.Main.WelcomePage"
            android:exported="false" />
        <activity
            android:name=".Activity.Main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>